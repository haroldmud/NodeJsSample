<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs')%>
  <body>
    <%- include('./partials/header.ejs')%>
    <div class="blogs content">
      <h2>Our <%= result.length  %> Blogs</h2>
      <% result.map((item)=> { %>
      <h1><%= item.title %></h1>
      <p><%= item.snippet%></p>
      <div>
        <a href="/blogs/<%=item.id%>"><button class="single">more</button></a>
      </div>
      <hr /><br /><br />
      <%})%>
    </div>
    <%- include('./partials/footer.ejs')%>
  </body>
</html>
