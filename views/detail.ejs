<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs')%>
  <body>
    <%- include('./partials/header.ejs')%>
    <div class="blogs content">
      <h2>All Blogs</h2>
      <h1><%= blog.title %></h1>
      <p><%= blog.snippet%></p>
      <div class="single">
        <a href="/"><button class="back">back</button></a><br /><br />
        <a href="/"><button class="delete" doc-data="<%= blog.id%>">delete</button></a>
    <!-- the doc-data attribute, grabs the data we passed in for further reusability -->
      </div>
      <hr />
    </div>
    <%- include('./partials/footer.ejs')%>

    <script>
      const trashcan = document. querySelector ('a. delete');
      trashcan. addEventListener('click', (e) => {
        const endpoint = `/blogs/${trashcan. dataset. doc}`;
        fetch (endpoint, {
          method: 'DELETE',
        })
        .then(()=>{})
        .catch((err)=>(console.log(err)))
      })
    </script>
  </body>
</html>
